<VirtualHost *:80>
  # Admin email, Server Name (domain name), and any aliases
    ServerAdmin someone@example.com
    ServerName  localhost.dev

  # Index file and Document Root (where the public files are located)
    DirectoryIndex index.html index.php
    DocumentRoot /vagrant/htdocs/public

  # Log file locations
    LogLevel warn
    ErrorLog  /vagrant/log/error.log
    CustomLog /vagrant/log/access.log combined

  # Directory specifics & VM workarounds
    <Directory /vagrant/htdocs/public>
        AllowOverride All
        Order allow,deny
        Allow from all
        Require all granted
        EnableSendfile off
    </Directory>
</VirtualHost>
